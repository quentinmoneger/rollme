{% extends 'base.html.twig' %}

{% block title %}Jouer
{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<link rel="stylesheet" href="{{ asset('assets/css/lobby.min.css') }}">
{% endblock %}

{% block body %}
	<main>
		<div class="svg"></div>
		<form method="POST" class="container">
			<div class="row justify-content-around">
				<section class="scenario col-5">
					<label for="scenario" class="h5">Sélection du scénario</label>
					<select type="text" name="scenario" class="form-control" id="scenario">
						{% for scenario in scenarios %}
							<option value="{{ scenario.getTitle() }}">{{ scenario.getTitle() }}</option>
						{% endfor %}
					</select>
				</section>
				<section class="param col-5">
					<label for="user" class="h5">Inviter d'autres utilisateurs</label>
					<select type="text" name="user" class="form-control user-select" id="user">
						{% for user in users %}
							<option value="{{ user.getUsername() }}">{{ user.getUsername() }}</option>
						{% endfor %}
					</select>
				</section>
			</div>
			<div class=" text-center">
				<button type="submit" class="btn btn-primary">Lancer la parite</button>
			</div>
		</form>
	</main>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/js/lobby.js') }}"></script>
{% endblock %}
