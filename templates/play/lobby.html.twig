{% extends 'base.html.twig' %}

{% block title %}Jouer
{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/lobby.min.css') }}">
{% endblock %}

{% block body %}
	<main>
		<form method="POST" class="container">
			<div class="svg"></div>
			<div class="row justify-content-around">
				<section class="scenario col-5">
					<label for="scenario" class="h5">Sélection du scénario</label>
					<select type="text" name="scenario" class="form-control" id="scenario">
						{% for scenario in scenarios %}
						<option value="{{ scenario.getTitle() }}" data-img_src="({{ asset(scenario.getImage()) }});">{{ scenario.getTitle() }}</option>
						{% endfor %}
					</select>
				</section>
				<section class="param col-5">
					<label for="user" class="h5">Inviter d'autres utilisateurs</label>
					<select type="text" name="user" class="form-control" id="user">
						<option>
					</select>
				</section>
			</div>
			<div class=" text-center">
				<button type="submit" class="btn btn-primary">Lancer la parite</button>
			</div>
		</form>
	</main>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/js/lobby.js') }}"></script>
{% endblock %}
