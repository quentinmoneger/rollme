{% extends 'base.html.twig' %}

{# {% block title %}{{ scenario.getTitle() }}{% endblock %} #}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/play.min.css') }}">{% endblock %}

{% block body %}
    <main>
        <div class="container mt-4 ">
            <div class="row justify-content-around ">

                <div class="col-8 ">
                    <section class="dashboard mt-4">
                        <img src="">
                    </section>
                    <section class="info mt-4 row">
                        <div id="carouselExample" class="carousel vert slide" data-ride="carousel" data-interval="false">
                            <div class="carousel-inner row">
                                <div class="button col-1 p-0">
                                    <a class="haut row" id="button-left-up" href="#carouselExample" role="button" data-slide="prev">
                                        <span><i class="las la-angle-up"></i></span>
                                    </a>
                                    <a class="bas row" id="button-left-down" href="#carouselExample" role="button" data-slide="next">
                                        <span><i class="las la-angle-down"></i></span>
                                    </a>
                                </div>
                                <div class="col-3 p-0">
                                    {% set i = 0 %}
                                    {% for user in users %}
                                    <div 
                                     {% if i < 1 %}
                                      class="carousel-item text-center active" 
                                     {% else %} 
                                     class="carousel-item text-center" 
                                     {% endif %} >
                                        <img class="d-block avatar" src="{{ asset(user.getAvatar())}}" alt="First slide">
                                        <p class="usercard">{{ user.username}}</p>
                                        <p class="usercard"><i class="las la-khanda"></i> 46  <i class="las la-sms"></i> 68  <i class="las la-lightbulb"></i></i>81</p>
                                    </div>
                                    {% set i = i + 1 %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="col-7 container p-0" id="frame">    
                        </div>
                        <div class="col-1 container p-0">
                            <button class="row" id="button-right-up">↑</button>
                            <button class="row" id="button-right-down">↓</button>
                        </div>
                    </section>
                </div>

                <div class="col-4 container">
                    <section class="chat mt-4" >
                        <div class="discussion " id="discussion">
                        </div>
                        <div class="input row">
                            <input id="text"class="col-10"type="text" name="message">
                            <button class="col-2" id="valid">↑</button>
                        </div>
                    </section>
                <section  class="roll mt-4">
                    <div id="roll1" class="row">
                        <input id="input1"class="col-6" type="text" name="message" placeholder="Nombre de dés">
                        <input id="input2"class="col-6" type="text" name="message" placeholder="Choix du type ">
                    </div>
                    <div id="roll2" class="row">
                        <button class="col-12" id="valid-rolz">Lancer de dés</button>
                    </div>
                </section>
                </div>

            </div>
        </div>
    </main>
    {# <input type="hidden" id="idgame" value="{{ idgame }}">
    <input type="hidden" id="nbrframe" value="{{ nbrframe }}"> #}
{% endblock %}

{% block footer %}{% endblock %}
{% block javascripts %}
{# <script type="text/javascript" src="/assets/js/chat.js"></script> #}
<script type="text/javascript" src="/assets/js/game.js"></script>
{% endblock %}