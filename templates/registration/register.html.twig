{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/register.min.css') }}">
{% endblock %}
{% block body %}
<div class="svg"></div>
<main>
    <section class="container presentation">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { label: 'Email'}) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.username, { label: 'Pseudo'}) }}
        {{ form_row(registrationForm.avatar, { label: 'Personnage'}) }}
        {{ form_row(registrationForm.history, { label: 'Histoire du Personnage'}) }}
        {{ form_row(registrationForm.intelligency, { label: 'Intelligence'}) }}
        {{ form_row(registrationForm.power, { label: 'Puissance'}) }}
        {{ form_row(registrationForm.social, { label: 'Charisme'}) }}
        <button type="submit" class="btn">Inscription</button>
    {{ form_end(registrationForm) }}
    </section>
</main>
{% endblock %}   
