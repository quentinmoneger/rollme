{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/request.min.css') }}">
{% endblock %}
{% block body %}
    <main>
        <div class="svg"></div>     
         {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="text-center mt-3">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-8 text-center ">
                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>
            <div class="col-12  text-center">
                <small>
                    Entrer votre addreesse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            <div class="row justify-content-center mt-3">
                <button class="btn btn-primary col-3 text-center">Confirmation</button>
            </div>
        </div>
        {{ form_end(requestForm) }}
    </main>
{% endblock %}