{% extends 'base.html.twig' %}

{% block title %}Nouveau scénario
{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/creation.min.css') }}">
{% endblock %}

{% block body %}
	{% for level, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ level }}">
				{{ message|raw }}
			</div>
		{% endfor %}
	{% endfor %}

	<form method="POST" enctype="multipart/form-data" class="container mt-5">
		<h1 class="my-3">Création d'un nouveau scénario</h1>

		<div class="form-group">
			<label for="title">Titre du scénario<span class="requierd">*</span>
			</label>
			<input type="text" name="title" class="form-control" placeholder="Ma nouvelle aventure..." requierd>
			<small class="font-italic">(Maximum 100 caractères)</small>
		</div>

		<div class="form-group">
			<div class="form-row">
				<div class="col-6">
					<label for="image">Illustration du scénario</label>
					<input type="file" name="image" class="form-control" accept="image/*">
				</div>
			</div>
		</div>

		<div class="form-group">
			<label for="resume">Résumé du scénario<span class="requierd">*</span>
			</label>
			<small class="font-italic">(Maximum 1000 caractères)</small>
			<textarea type="text" name="resume" class="form-control" rows="8" requierd></textarea>
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-primary">Enregistrer</button>
		</div>

		<small class="requierd">*Champ obligatoire</small>
	</form>

{% endblock %}
