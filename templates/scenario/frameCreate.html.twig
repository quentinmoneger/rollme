{% extends 'base.html.twig' %}

{% block title %}
	{{ scenario.getTitle() }}
{% endblock %}

{% block body %}
	{% for level, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ level }}">
				{{ message|raw }}
			</div>
		{% endfor %}
	{% endfor %}
	<a href="{{ path('scenario_update', {id: scenario.getId()}) }}" class="btn btn-secondary m-1">Retour</a>

	<div class="container">
		<h1 class="my-3">Nouvelle scène de "{{ scenario.getTitle() }}"</h1>
		<form method="POST" enctype="multipart/form-data" class="mt-5">
			<div class="card">

				<div class="form-group">
					<label for="number">Numéro de scène</label>
					<input type="number" name="number" class="form-control" requierd>
				</div>

				<div class="form-row">
					<div class="col">
						<label for="image">Illustration de la scène</label>
						<input type="file" name="image" class="form-control" accept="image/*">
					</div>
				</div>

				<div class="form-group">
					<label for="text">Narration</label>
					<textarea type="text" name="text" class="form-control" rows="8" requierd></textarea>
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary">Ajouter</button>
				</div>

			</div>
		</form>
	</div>


{% endblock %}
